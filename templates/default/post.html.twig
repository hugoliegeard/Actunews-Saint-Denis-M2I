{% extends "base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}
{% block page_title %}{{ post.title }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-10 mx-auto">

            <!-- Métadonnées de l'article -->
            <div class="d-flex text-muted mb-4">
                <div class="me-3">
                    <span>Par <a href="#" class="text-decoration-none">
                        {{ post.user.firstname }}</a></span>
                </div>
                <div class="me-3">
                    <i class="bi bi-calendar"></i>
                    <span>{{ post.createdAt|date("d/m/Y") }}</span>
                </div>
                <div>
                    <span class="badge bg-primary">{{ post.category.name }}</span>
                </div>
            </div>

            <!-- Image principale -->
            <div class="mb-4">
                <img src="{{ asset('uploads/posts/' ~ post.image) }}" alt="{{ post.title }}" class="img-fluid rounded">
                {#  <figcaption class="text-muted small mt-2">{{ post.title }}</figcaption>#}
            </div>

            <!-- Contenu de l'article -->
            <div class="article-content">
                {{ post.content | raw }}
            </div>

            <!-- Auteur de l'article -->
            <div class="card my-4">
                <div class="card-body">
                    <div class="d-flex">
                        <div>
                            <h5 class="card-title">{{ post.user.firstname }}</h5>
                            <a href="#" class="btn btn-sm btn-outline-primary">Voir tous ses articles</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

